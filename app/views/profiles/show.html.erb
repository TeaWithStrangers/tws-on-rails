<%= render partial: 'shared/header' %>
<div class="dash static-banner cover-photo">
  <div class="container">
    <div class="photo-container">
      <div class="host-photo">
        <img class="host-img" src="<%= @current_user.avatar.url(:landscape) %>"/>
      </div>
    </div>
    <div class="dash-navigation">

      <div class="personal-info">
        <span class="affirmation white capitalize boldweight">
          You look real good today, 
        </span>
        <h2 class="white">
          <%= "#{current_user.nickname}!" %>
        </h2>
      </div>
      <div class="dash-menu">
        <%= render partial: 'sidebar' %>
      </div>
      
    </div>
  </div>
</div>

<div class="container dashboard">
  <div class="row">
    <div class="wide">
      <h2>
        
      </h2>
      <div class="third left">
        <%= render partial: 'sidebar' %>
      </div>
      <hr/>
      <div class="two-third right">
        <div class="host-tts">
          <%= render partial: 'host_tea_time_info', locals: {tea_times: @hosting} if current_user.host? %>
        </div>
        <div class="attendee-tts">
          <%= render partial: 'user_attendance_info', locals: {attendances: @attending} %>
        </div>
        <div class="waitlist-tts">
          <%= render partial: 'user_waitlist_info', locals: {attendances: @waitlist} %>
        </div>
      </div>
    </div>
  </div>
</div>
