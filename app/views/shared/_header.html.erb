<header>
  <div class='container'>
    <%= link_to title ||= "Tea With Strangers", root_path, class: 'tws-logo-type' %>
    <span class="menu-expando tws-logo-type" onclick='toggleHeader()'></span>
    <nav class='nav-list'>
      <ul class='nav-links'>
        <% [["Cities", cities_path], ["Get Involved", hosting_path]].each do |li| %>
          <li class="nav-link-item"><%= link_to li[0], li[1] %></li>
        <% end %>

        <% if user_signed_in? %>
          <li class="nav-link-item">
            <%= link_to 'My Account', profile_path %>
          </li>
          <li class="nav-link-item">
            <%= link_to 'Sign out', logout_path %>
          </li>
        <% else %>
          <li class="nav-link-item">
            <%= link_to 'Sign In', new_user_session_path, id: 'login', class: 'sign-in-emphasis'%>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>