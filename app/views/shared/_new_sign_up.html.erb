<div class="mehuls-crazy-css">
  <h3>Welcome!</h3>
  <p>Let's make this real and have a conversation at tea time.</p>

  <%= link_to user_omniauth_authorize_path(:facebook), class: 'fb-login-button' do %>
    Sign in with Facebook
  <% end %>
  <div class="strikethrough">
    <span>&nbsp;or&nbsp;</span>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: ['sign-up'] }) do |f| %>
  <%= f.text_field :nickname, placeholder: 'First name (or nickname)', class: 'name', autofocus: true %>
  <%= f.email_field :email, placeholder: 'Email address', class: 'email' %>
  <%= f.password_field :password, placeholder: 'Password (at least 8 characters you won\'t forget!)', class: 'password' %>
  <%= f.submit "Let's Get Tea", class: 'orange' %>
<% end %>
