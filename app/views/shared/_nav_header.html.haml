%header
  %nav
    .tws
      %h1.logo
        = link_to 'Tea With Strangers', root_path
        = yield :header_logo
    %ul.nav-list
      %li= link_to "Cities", root_path+"#cities"
      / %li= link_to "Stories", stories_path
      / %li= link_to "Questions", questions_path
      %li= link_to "Hosting", hosting_path
      / %li=link_to "About", about_path
      - if current_user.nil?
        %li= link_to 'Login', new_user_session_path, {id: :login}
      - else
        %li= link_to "Account", "/profile"
        %li= link_to "Let's Get Tea",
          schedule_city_path((current_user.home_city || City.first))
        %li= link_to "Sign Out", destroy_user_session_path, method: :delete
%hr
