%header
  %nav
    .tws
      %h1.logo
        = link_to 'Tea With Strangers', root_path
        = yield :header_logo
    %ul.nav-list
      %li= link_to "Cities", cities_path
      - if !current_user || (current_user && !current_user.host?)
        %li= link_to "Hosting", hosting_path
      %li=link_to "About", about_path
      - if current_user.nil?
        %li= link_to 'Login', new_user_session_path, {id: :login}
      - else
        %li= link_to "Dashboard", profile_path
        %li= link_to "Sign Out", destroy_user_session_path, method: :delete
%hr
