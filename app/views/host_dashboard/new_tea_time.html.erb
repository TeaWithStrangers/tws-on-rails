<%= render partial: 'shared/header' %>

<div class="container dashboard edit" >
  <div class="row">
    <div class="wide">
      <p></p>
      <h2 class="main">Create a New Tea Time</h2>
      <hr>
      <%= form_for @tea_time do |f| %>
        <%= f.label :city %>
        <%= f.select(:city_id, options_for_select(@available_cities,@tea_time.city.id), {class: "city"}) %>
        <br>
        <%= f.label :start_time, "Date/Time" %>
        <%= f.datetime_select :start_time %>
        <br>
        <%= f.label :duration, 'Duration (in Hours)' %>
        <%= f.number_field :duration, value: 2 %>
        <br>
        <%= f.label :location, 'Location (Place name & address)' %>
        <%= f.text_field :location %>

        <% if @tea_time.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= "#{pluralize(@tea_time.errors.count, "error")} prohibited this tea_time from being saved:" %>
            </h2>
            <ul>
              <% @tea_time.errors.full_messages.each do |msg| %>
                <li>
                  <%= msg %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="actions">
          <div class="create-button">
            <%= f.submit 'Create Tea Time' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>